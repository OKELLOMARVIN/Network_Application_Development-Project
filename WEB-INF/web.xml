<web-app>
  <display-name>Login</display-name>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>loginpackage.Login</servlet-class>
  </servlet> 
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>jdbcpackage.Register</servlet-class>
    </servlet>

  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>

     <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
